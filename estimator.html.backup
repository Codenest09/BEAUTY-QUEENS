            border-radius: var(--radius-lg);
            box-shadow: var(--shadow-xl);
            padding: var(--spacing-lg);
            position: relative;
        }

        .category-block {
            margin-bottom: var(--spacing-lg);
            border-bottom: 2px solid var(--color-light-pink);
            padding-bottom: var(--spacing-md);
        }

        .category-title {
            color: var(--color-rose);
            margin-bottom: var(--spacing-md);
            font-size: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .service-checkbox {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px;
            border-radius: var(--radius-md);
            transition: background 0.3s ease;
            cursor: pointer;
        }

        .service-checkbox:hover {
            background: var(--color-light-pink);
        }

        .checkbox-label {
            display: flex;
            align-items: center;
            gap: 10px;
            font-size: 1.1rem;
            width: 100%;
            cursor: pointer;
        }

        .checkbox-input {
            width: 20px;
            height: 20px;
            accent-color: var(--color-rose);
        }

        .service-price {
            font-weight: bold;
            color: var(--color-dark);
        }

        .total-box {
            background: var(--color-dark);
            color: var(--color-gold);
            padding: var(--spacing-lg);
            border-radius: var(--radius-lg);
            text-align: center;
            position: sticky;
            bottom: 20px;
            margin-top: var(--spacing-lg);
            box-shadow: 0 -5px 20px rgba(0, 0, 0, 0.2);
            z-index: 100;
        }

        .total-amount {
            font-size: 2.5rem;
            font-weight: bold;
            margin: 10px 0;
        }

        /* Floating Cart Icon */
        .floating-cart {
            position: fixed;
            bottom: 20px;
            right: 20px;
            background: var(--gradient-hero);
            width: 70px;
            height: 70px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 8px 24px rgba(255, 105, 180, 0.4);
            cursor: pointer;
            transition: all 0.3s ease;
            z-index: 1000;
        }

        .floating-cart:hover {
            transform: scale(1.1);
            box-shadow: 0 12px 32px rgba(255, 105, 180, 0.5);
        }

        .floating-cart.has-items {
            animation: bounce 0.5s ease;
        }

        .cart-icon {
            font-size: 2.5rem;
        }

        .cart-badge {
            position: absolute;
            top: -5px;
            right: -5px;
            background: var(--color-gold);
            color: white;
            border-radius: 20px;
            padding: 4px 10px;
            font-size: 0.85rem;
            font-weight: bold;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
            min-width: 40px;
            text-align: center;
        }

        @keyframes bounce {

            0%,
            100% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.15);
            }
        }
    </style>
